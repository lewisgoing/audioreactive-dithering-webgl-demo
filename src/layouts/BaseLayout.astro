---
/* Props every page supplies */
const { title = 'Squares', shape = 'square', pixelSize } = Astro.props;
import "../styles/main.css";
import ThreeShader from "../components/ThreeShader.astro";
import mainUrl from "../script/main.ts?url";
const palettes = {
  square  : { ink: '#ff6d00', bg: '#0d0d0d' }, 
  
  circle  : { ink: '#55ffa7', bg: '#001d1d' }, 
  triangle: { ink: '#5ab0ff', bg: '#0d1021' }, 
  diamond : { ink: '#f6cf3e', bg: '#080603' }, 
};
type Shape = keyof typeof palettes;
const { bg, ink } = palettes[shape as Shape];
---
<!DOCTYPE html>
<html lang="en" data-shape={shape}>
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@600&display=swap" rel="stylesheet" />

  </head>
  <body data-shape={shape}>
  
    <h1 class="label">{title}</h1>
    <ThreeShader  {...{bg, ink, shape, pixelSize}}  />
     <nav class="pager">
      <a aria-current={shape === 'square' && 'page'} href="/">Squares</a>
      <a aria-current={shape === 'circle' && 'page'} href="/circles.html">Circles</a>
      <a aria-current={shape === 'triangle' && 'page'} href="/triangles.html">Triangles</a>
      <a aria-current={shape === 'diamond' && 'page'} href="/diamonds.html">Diamonds</a>
    </nav>
    <div class="social">
        <a href="https://www.linkedin.com/in/seva-dolgopolov/" target="_blank" rel="noopener noreferrer">
        <img src='/linkedin.svg' />/seva-dolgopolov
        </a>
    </div>
  </body>
</html>
